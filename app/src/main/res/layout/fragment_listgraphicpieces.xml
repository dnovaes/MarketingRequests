<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout_id_listgraphicpieces"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/total_selected_string_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_items"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/title_textSize"
                android:fontFamily="@font/roboto_thin"
                android:textColor="@color/bgPetrobahia"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/total_selected_number_view"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:padding="4dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"/>
        <TextView
                android:id="@+id/total_selected_number_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_textSize"
                android:fontFamily="@font/roboto_thin"
                android:textColor="@color/bgPetrobahia"
                app:layout_constraintStart_toEndOf="@+id/total_selected_string_view"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="4dp"
                tools:text="20"
                android:textAlignment="center" android:layout_marginTop="8dp" android:textStyle="bold"
                android:text="@string/total_items_selected_number"/>
        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/total_selected_string_view"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:id="@+id/item_text_graphicpieces"
                        android:text="Email Marketing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bgPetrobahia"
                />
                <CheckBox
                        android:id="@+id/item_checkbox_graphicpieces"
                        android:text="Avatar Whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bgPetrobahia"
                />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
