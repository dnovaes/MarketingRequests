<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
>
    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_text_listgraphicpieces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bgPetrobahia"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingBottom="8sp"
            android:paddingTop="8sp"
            tools:text="texttest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/item_checkbox_listgraphicpieces"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/item_checkbox_listgraphicpieces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorLink="@color/bgPetrobahia"
            android:buttonTint="@color/bgPetrobahia"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/item_text_listgraphicpieces"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
